{
  "name": "@calimero-network/merobox-js",
  "version": "0.0.1",
  "description": "JS wrapper for merobox CLI",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "bin": {
    "merobox": "bin/merobox"
  },
  "files": ["bin", "dist", "README.md", "API.md", "CHANGELOG.md", "LICENSE"],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "build": "tsc -p tsconfig.json",
    "test": "node scripts/test.js",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "release": "semantic-release",
    "setup-release": "node scripts/setup-semantic-release.js"
  },
  "engines": { 
    "node": ">=18" 
  },
  "optionalDependencies": {},
  "devDependencies": {
    "execa": "^9.3.0",
    "typescript": "^5.6.0",
    "@types/node": "^20.12.12",
    "semantic-release": "^22.0.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1"
  },
  "keywords": ["merobox", "calimero", "blockchain", "cli"],
  "author": "Calimero Network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/calimero-network/merobox-js.git"
  },
  "homepage": "https://github.com/calimero-network/merobox-js#readme",
  "publishConfig": { "access": "public" },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
